doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Tech Insights Blog
    link(rel='stylesheet', href='styles.css')
    link(rel='preconnect', href='https://fonts.googleapis.com')
    link(rel='preconnect', href='https://fonts.gstatic.com', crossorigin)
    link(
      href='https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=JetBrains+Mono:wght@400;700&display=swap',
      rel='stylesheet'
    )

  body
    header
      nav
        .nav-brand Tech Insights
        ul.nav-links
          li: a.active(href='/') Home
          li: a(href='/articles') Articles
          li: a(href='/about') About
          li: a(href='/contact') Contact

    main
      if posts && posts.length
        each post in posts
          article.post
            h2
              a(href=`/articles/${post.slug.replace('articles/', '')}`)= post.title
            .post-meta
              if post.date
                time(datetime=post.date.toISOString())= post.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })
              if post.category
                span.category= post.category
            if post.description
              p= post.description
            a.read-more(href=`/articles/${post.slug.replace('articles/', '')}`) Read more →
      else
        article.post
          h1 Welcome to Tech Insights
          p There are no posts yet. Check back soon!

    footer
      p &copy; 2024 Tech Insights. Built with ❤️ and code.
